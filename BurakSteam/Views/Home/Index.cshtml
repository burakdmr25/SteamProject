@model IEnumerable<BurakSteam.Models.Game>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap JS (veya jQuery ile) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<video width="100%" height="auto" style="margin-top:50px" loop autoplay muted>
    <source src="~/videolar/webm_page_bg_turkish.webm" type="video/mp4">
    Tarayıcınız video etiketi desteklemiyor.
</video>

<div id="imageSlider" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/91quqGK93dL.jpg" class="d-block w-100" alt="Image 1">
        </div>
        <div class="carousel-item">
            <img src="~/images/ss_c97bcad291f4f45d4be4594f34bd78921d961099.1920x1080.jpg" class="d-block w-100" alt="Image 2">
        </div>
        <div class="carousel-item">
            <img src="~/images/content_64d07b29636e0_78909.jpg" class="d-block w-100" alt="Image 3">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#imageSlider" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#imageSlider" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<h1 class="text-center my-4" style="color:white;">Oyunlar</h1>

<div class="container">
    <div class="row">
        @foreach (var game in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="game-card">
                    <!-- Resim Divi -->
                    <div class="image-container">
                        @if (!string.IsNullOrEmpty(game.ImagePath))
                        {
                            <img src="@game.ImagePath" class="game-image" alt="@game.Name">
                        }
                        else
                        {
                            <div class="no-image">Resim Yok</div>
                        }
                    </div>

                    <!-- Oyun Bilgileri ve Video -->
                    <div class="game-info">
                        @if (!string.IsNullOrEmpty(game.GameDetails?.VideoPath))
                        {
                            <video class="game-video" loop autoplay muted>
                                <source src="@game.GameDetails.VideoPath" type="video/mp4">
                            </video>
                        }
                        <h5 class="game-name">@game.Name</h5>
                        <p class="game-genre">@game.Genre</p>
                        <p class="game-price text-success"><strong>@game.Price.ToString("C")</strong></p>
                        <p class="game-description">@game.Description</p>
                     
                        <a href="@Url.Action("Details", "Game", new { id = game.Id })" class="btn btn-primary">Detaylar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
