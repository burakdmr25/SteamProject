@{
}
@model List<BurakSteam.Models.Purchase>

@{
    ViewData["Title"] = "Sepet - Ödeme İşlemi";
}

<h2>Sepetiniz</h2>

<table class="table">
    <thead>
        <tr>
            <th>Oyun Adı</th>
            <th>Fiyat</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Game?.Name</td>
                <td>@item.Price.ToString("C2")</td>
            </tr>
        }
    </tbody>
</table>

<!-- Sepetteki toplam fiyat -->
<div class="total-price">
    <h4>Toplam Fiyat: @ViewBag.TotalPrice.ToString("C2")</h4>
</div>

<div class="mt-4">
    <!-- Ödeme işlemi için ProceedToPayment post işlemi -->
    <form method="post" asp-action="ProceedToPayment">
        <button type="submit" class="btn btn-primary">Ödeme İşlemine Geç</button>
    </form>
</div>

<div class="mt-3">
    <!-- Sepete geri dönme linki -->
    <a href="@Url.Action("Checkout", "Purchase")" class="btn btn-secondary">Sepeti Görüntüle</a>
</div>
